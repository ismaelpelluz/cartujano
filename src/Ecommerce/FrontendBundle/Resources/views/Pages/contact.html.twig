{% extends "FrontendBundle:Layouts:2columns.html.twig" %}

{% block title %}{{ "Contácta con nosotros | El Cartujano "|trans }}{% endblock %}
{% block description %}{{"¿Tienes alguna duda? ¿Quieres conocer más sobre nuestros productos? Estaremos encantados de ayudarte"|trans}}{% endblock %}
{% block sectionclass %}contact page{% endblock %}


{% block content %}
    <h2 class="title">{{ 'Contacto' | trans }}</h2>
    <form class="" action="{{ path('contact') }}" method="post">
        <div class="form-group">
            {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Nombre' | trans} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' | trans} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.text, { 'attr': { 'class': 'form-control', 'placeholder': 'Escríbenos tu consulta' | trans} }) }}
        </div>
    </form>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}