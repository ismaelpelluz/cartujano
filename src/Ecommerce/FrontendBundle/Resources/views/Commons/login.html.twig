{% extends "FrontendBundle:Layouts:1column.html.twig" %}

{% block title %}{{ "Bienvenido a Ecommerce"|trans }}{% endblock %}
{% block description %}{{"Una tienda que vende pulseras"|trans}}{% endblock %}
{% block sectionclass %}home page{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="line-block line-block-md">
                <h2 class="line-title">{{ 'Bienvenido a Ecommerce' | trans }}</h2>
            </div>

            <div class="small-box container">
                <div class="row">
                    <div class="col-md-6 login-form">
                        <form name="login" method="post" action="{{ path('login_check') }}">
                            <fieldset>
                                <div class="form-group">
                                    <input type="text" placeholder="Email" class="form-control" id="USERNAME" name="_username">
                                </div>
                                <div class="form-group">
                                    <input type="password" placeholder="Contraseña" class="form-control" id="PASSWORD" name="_password">
                                </div>
                                <div class="form-group">
                                    <label style="text-align: left;" class="checkbox">
                                        <input type="checkbox" checked="checked" name="_remember_me" id="remember_me">
                                        {{ 'Recuérdame' | trans }}
                                    </label>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-large btn-blue" type="submit">{{ 'Entrar!' | trans }}</button> &nbsp; &nbsp;
                                    <a class="text-12 ml-10" href="">
                                        He olvidado mi password
                                    </a>
                                </div>
                            </fieldset>
                        </form>
                    </div><!-- .col-md-6 -->
                    <div class="col-md-6">
                        <div class="register">
                            <p>{{ '¿Eres un nuevo cliente?' | trans }}</p>
                            <a class="btn btn-success" title="{{ 'Regístrate gratis en Ecommerce' | trans }}" href="{{ path('register') }}">{{ 'Regístrate gratis' | trans }}</a>
                        </div>
                    </div><!-- .col-md-6 -->
                </div>
            </div>
        </div><!-- .col-md-12 -->
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}