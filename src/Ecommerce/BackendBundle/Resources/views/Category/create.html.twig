{% extends "BackendBundle:Layouts:2columns.html.twig" %}
{%  set edit = "Edición de Categoría"|trans %}
{%  set create = "Creación de Categoría"|trans %}
{% block title_section %}
    {% if edition is defined %}
        {{ edit }}
    {% else %}
        {{ create }}
    {% endif %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block buttons_section %}
    <div class="btn-group">
        <a href="{{ path('admin_category_index') }}" title="{{"Listar categorias" | trans}}" class="btn"><i class="fa fa-align-justify"></i></a>
        <a href="{{ path('admin_category_create') }}" title="{{"Añadir categoría" | trans}}" class="btn"><i class="fa fa-plus"></i></a>
    </div>
{% endblock %}

{% block content %}

    <div class="widget-box">
        <div class="widget-title">
            <span class="icon">
                <i class="fa fa-pencil"></i>
            </span>
            {% if edition is defined %}
                <h5>{{ edit }}</h5>
            {% else %}
                <h5>{{ create }}</h5>
            {% endif %}
        </div>
        <div class="widget-content nopadding">
            <form class="form-horizontal" role="form"
                  action="{% if edition is defined %}{{ path('admin_category_edit',{'slug':category.slug}) }} {% else %} {{ path('admin_category_create') }} {% endif %}"
                  method="post" xmlns="http://www.w3.org/1999/html">

                <div class="form-group">
                    <label for="item_title" class="col-sm-2 control-label">
                        <span class="red">*</span>
                        {{ 'Nombre'|trans }}
                        <a href="#" data-placement="right" class="cf-tooltip" data-toggle="tooltip" title="{{ "Nombre de la categoría"|trans }}"><span class="fa fa-question-sign"></span></a></label>
                    </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.category, { 'attr': { 'class': 'form-control required'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-sm-10">
                        <button id="register" type="submit" class="btn btn-primary">
                            {{ "Guardar cambios"|trans }}
                        </button>
                        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
                    </div>
                    <p class="col-md-offset-2 col-sm-10 help-block">
                        <span class="red">*</span> {{"Campos obligatorios" | trans }}
                    </p>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}