    <div class="col-sm-2">
        {{ form_widget(form.bankCode, { 'attr': { 'class': 'form-control', 'placeholder': 'Entidad'} }) }}
    </div>

    <div class="col-sm-2">
        {{ form_widget(form.branchCode, { 'attr': { 'class': 'form-control', 'placeholder': 'Oficina'} }) }}
