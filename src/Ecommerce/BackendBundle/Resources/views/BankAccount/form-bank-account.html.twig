<div class="form-group">
    <label for="bankAccount_iban" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Cuenta bancaria'|trans }}
    </label>
    <div class="col-sm-1">
        {{ form_widget(form.iban, { 'attr': { 'class': 'form-control', 'placeholder': 'IBAN'} }) }}
    </div>

    <div class="col-sm-1">
        {{ form_widget(form.bankCode, { 'attr': { 'class': 'form-control', 'placeholder': 'Entidad'} }) }}
    </div>

    <div class="col-sm-1">
        {{ form_widget(form.branchCode, { 'attr': { 'class': 'form-control', 'placeholder': 'Oficina'} }) }}
    </div>

    <div class="col-sm-1">
        {{ form_widget(form.checkDigits, { 'attr': { 'class': 'form-control', 'placeholder': 'DC' | trans} }) }}
    </div>

    <div class="col-sm-3">
        {{ form_widget(form.accountNumber, { 'attr': { 'class': 'form-control', 'placeholder': 'NÃºmero de cuenta' | trans} }) }}
    </div>

    <b class="col-sm-10 col-sm-offset-2 mt20" id="bankName">
        {% if account is defined %}{{ account.bankName }}{% endif %}
    </b>
</div>

<div class="hidden">
    <input id="bankAccount_bank_name" type="text" name="bankAccount_bankName" value="{% if account is defined %}{{ account.bankName }}{% endif %}">
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-sm-10">
        <button id="register" type="submit" class="btn btn-primary">
            {{ "Guardar cambios"|trans }}
        </button>
        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
    </div>
    <p class="col-md-offset-2 col-sm-10 help-block">
        <span class="red">*</span> {{"Campos obligatorios" | trans }}
    </p>
</div>