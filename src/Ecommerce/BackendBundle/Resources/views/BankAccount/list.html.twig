{% extends "BackendBundle:Layouts:2columns.html.twig" %}

{% block title_section %}
    {{ "Cuenta bancaria" | trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% if account %}
        <div class="widget-box">
            <div class="widget-title">
            <span class="icon">
                <i class="fa fa-th"></i>
            </span>
                <h5>{{ "Mi cuenta bancaria"|trans }}</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                    <tr>
                        <th>{{ "Número de la cuenta"|trans }}</th>
                        <th>{{ "Acciones"|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><b>{{ account.bankName }}</b> -- {{ account }}</td>
                            <td class="text-center">
                                <a title="{{ 'Editar cuenta bancaria' | trans }}" class="btn btn-primary btn-xs" href="{{ path('admin_bank_account_edit', {'id': account.id}) }}"><i class="fa fa-pencil"></i>{{ 'Editar' | trans }}</a>
                                <a title="{{ 'Eliminar cuenta bancaria' | trans }}" class="delete btn btn-danger btn-xs" href="{{ path('admin_bank_account_delete', {'id': account.id}) }}"><i class="fa fa-trash-o"></i>{{ 'Eliminar' | trans }}</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    {% else %}
        <div class="row">
            <a href="{{ path('admin_bank_account_create') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> {{ "Añadir cuenta bancaria" | trans }}
            </a>
        </div>

        <div class="alert alert-info mt">
            <strong>{{"Información!" | trans }}</strong>
            {{"No se ha encontrado ninguna cuenta bancaria. Añade una para que los clientes puedan realizar pagos mediante transferencia bancaria." | trans }}
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}