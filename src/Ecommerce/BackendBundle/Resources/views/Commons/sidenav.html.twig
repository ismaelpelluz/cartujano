{% set action = app.request.attributes.get('_route') %}
{% set params = app.request.attributes.get('_route_params') %}
<div id="sidebar">
    {#<div id="search">
        <input type="text" placeholder="Search here..."/><button type="submit" class="tip-right" title="Search"><i class="fa fa-search"></i></button>
    </div>#}
    <ul>
        <li class="{% if action == 'admin_user_index' or action == 'admin_user_edit' or action == 'admin_user_view' %}active open{% endif %}">
            <a href="{{ path('admin_user_index') }}"><i class="fa fa-users"></i> <span>{{ "Usuarios"|trans }}</span></a>
        </li>
        <li class="submenu {% if action == 'admin_category_index' or action == 'admin_category_create' or action == 'admin_category_edit' or action == 'admin_category_view'
        or action == 'admin_subcategory_index' or action == 'admin_subcategory_create' or action == 'admin_subcategory_edit' or action == 'admin_subcategory_view' %}open{% endif %}">
            <a href="#">
                <i class="fa fa-folder-open"></i>
                <span>{{ "Categorías"|trans }}</span>
                <i class="arrow fa fa-chevron-right"></i>
            </a>
            <ul>
                <li {% if action == 'admin_category_index' or action == 'admin_category_create' or action == 'admin_category_edit' or action == 'admin_category_view' %}class="active"{% endif %}>
                    <a href="{{ path('admin_category_index') }}"><i class="fa fa-tag"></i><span>{{ "Categorías principales"|trans }}</span></a>
                </li>
                <li {% if action == 'admin_subcategory_index' or action == 'admin_subcategory_create' or action == 'admin_subcategory_edit' or action == 'admin_subcategory_view' %}class="active"{% endif %}>
                    <a href="{{ path('admin_subcategory_index') }}"><i class="fa fa-tags"></i><span>{{ "Subcategorías"|trans }}</span></a>
                </li>
            </ul>
        </li>
        <li class="{% if action == 'admin_manufacturer_index' or action == 'admin_manufacturer_create' or action == 'admin_manufacturer_edit' %}active open{% endif %}">
            <a href="{{ path('admin_manufacturer_index') }}"><i class="fa fa-briefcase"></i> <span>{{ "Fabricantes"|trans }}</span></a>
        </li>
        <li class="{% if action == 'admin_item_index' or action == 'admin_item_create' or action == 'admin_item_edit' %}active open{% endif %}">
            <a href="{{ path('admin_item_index') }}"><i class="fa fa-puzzle-piece"></i> <span>{{ "Productos"|trans }}</span></a>
        </li>
        <li class="submenu {% if action == 'admin_order_index' or action == 'admin_order_view' or action == 'admin_payment_index' or action == 'admin_bill_index' %}open{% endif %}">
            <a href="#">
                <i class="fa fa-file"></i>
                <span>{{ "Ventas"|trans }}</span>
                <i class="arrow fa fa-chevron-right"></i>
            </a>
            <ul>
                <li {% if action == 'admin_order_index' or action == 'admin_order_view' %}class="active"{% endif %}>
                    <a href="{{ path('admin_order_index') }}"><i class="fa fa-shopping-cart"></i><span>{{ "Pedidos"|trans }}</span></a>
                </li>
                <li {% if action == 'admin_payment_index' %}class="active"{% endif %}>
                    <a href=""><i class="fa fa-credit-card"></i><span>{{ "Pagos"|trans }}</span></a>
                </li>
                <li {% if action == 'admin_bill_index' %}class="active"{% endif %}>
                    <a href=""><i class="fa fa-file-text-o"></i><span>{{ "Facturas"|trans }}</span></a>
                </li>
            </ul>
        </li>
        <li class="{% if action == 'admin_billing_settings_index' or action == 'admin_billing_settings_create' or action == 'admin_billing_settings_edit' %}active open{% endif %}">
            <a href="{{ path('admin_item_index') }}"><i class="fa fa-cogs"></i> <span>{{ "Datos de facturación"|trans }}</span></a>
        </li>
    </ul>
</div>
