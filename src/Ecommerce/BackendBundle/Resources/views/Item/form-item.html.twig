<div class="form-group">
    <label for="item_name" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Nombre'|trans }}
    </label>
    <div class="col-sm-3">
        {{ form_widget(form.name, { 'attr': { 'class': 'form-control required'} }) }}
    </div>
</div>

<div class="form-group">
    <label for="item_description" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Descripción'|trans }}
    </label>
    <div class="col-sm-10">
        {{ form_widget(form.description, { 'attr': { 'class': 'form-control required'} }) }}
    </div>
</div>

<div class="form-group">
    <label for="item_price" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Precio'|trans }}
        <a href="#" data-placement="right" class="bo-tooltip" data-toggle="tooltip" title="{{ "Precio del producto"|trans }}"><span class="fa fa-question"></span></a></label>
    </label>
    <div class="col-sm-2">
        <div class="input-group">
            {{ form_widget(form.price, { 'attr': { 'class': 'form-control required'} }) }}
            <span class="input-group-addon"><i class="fa fa-euro"></i></span>
        </div>
    </div>
    <div class="col-sm-3">
        <span id="tax-included" class="alert alert-info alert-inline">{{ 'IVA incluido' | trans }}</span>
    </div>
    <div class="col-sm-3 hidden">
        <span id="tax-price" class="alert alert-info alert-inline">{{ 'IVA no incluido' | trans }}</span>
    </div>
</div>

<div class="form-group">
    <label for="item_category" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Categoría'|trans }}
    </label>
    <div class="col-sm-3">
        {{ form_widget(form.subcategory, { 'attr': { 'class': 'form-control required'} }) }}
    </div>
</div>

<div class="form-group">
    <label for="item_manufacturers" class="col-sm-2 control-label">
        {{ 'Fabricantes'|trans }}
        <a href="#" data-placement="right" class="bo-tooltip" data-toggle="tooltip" title="{{ "Fabricantes del producto"|trans }}"><span class="fa fa-question"></span></a>
    </label>
    <div class="col-sm-3">
        {{ form_widget(form.manufacturers, { 'attr': { 'class': 'form-control select2'} }) }}
    </div>
</div>

<div class="form-group">
    <label for="item_stock" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Stock'|trans }}
        <a href="#" data-placement="right" class="bo-tooltip" data-toggle="tooltip" title="{{ "Existencias del producto"|trans }}"><span class="fa fa-question"></span></a></label>
    </label>
    <div class="col-sm-1">
        {{ form_widget(form.stock, { 'attr': { 'class': 'form-control required'} }) }}
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-sm-10">
        <button id="register" type="submit" class="btn btn-primary">
            {{ "Guardar cambios"|trans }}
        </button>
        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
    </div>
    <p class="col-md-offset-2 col-sm-10 help-block">
        <span class="red">*</span> {{"Campos obligatorios" | trans }}
    </p>
</div>