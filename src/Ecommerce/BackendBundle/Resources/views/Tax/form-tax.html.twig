<div class="form-group">
    <label for="tax_name" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Nombre del impuesto'|trans }}
        <a href="#" data-placement="right" class="bo-tooltip" data-toggle="tooltip" title="{{ "IVA, ..."|trans }}"><span class="fa fa-question"></span></a></label>
    </label>
    <div class="col-sm-3">
        {{ form_widget(form.name, { 'attr': { 'class': 'form-control required'} }) }}
    </div>
</div>

<div class="form-group">
    <label for="tax_taxes" class="col-sm-2 control-label">
        <span class="red">*</span>
        {{ 'Impuesto'|trans }}
        <a href="#" data-placement="right" class="bo-tooltip" data-toggle="tooltip" title="{{ "En porcentaje"|trans }}"><span class="fa fa-question"></span></a></label>
    </label>
    <div class="col-sm-1">
        <div class="input-group">
            {{ form_widget(form.taxes, { 'attr': { 'class': 'form-control required'} }) }}
            <span class="input-group-addon">%</span>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-sm-10">
        <button id="register" type="submit" class="btn btn-primary">
            {{ "Guardar cambios"|trans }}
        </button>
        <img style="display:none;" class="ml15 loader pull-lef" src="{{ asset('bundles/frontend/img/ajax-loader.gif') }}">
    </div>
    <p class="col-md-offset-2 col-sm-10 help-block">
        <span class="red">*</span> {{"Campos obligatorios" | trans }}
    </p>
</div>