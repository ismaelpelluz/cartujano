{% extends 'FrontendBundle:Layouts:email.html.twig' %}
{% block content_mail %}
    <table cellpadding="0" cellspacing="0" border="0" style="color: #717171; font: normal 11px Helvetica, Arial, sans-serif; margin: 0; padding: 0 20px 0 20px;" width="690">
        <tr>
            <td style="padding: 10px 0 0;" align="left">

                <h2 style="color:#555; font-weight: bold; margin: 0 0 10px 0; padding: 0; line-height: 26px; font-size: 14px; font-family: Helvetica, Arial, sans-serif; ">
                    {{ "Hola"|trans }} {{ order.customer.name }}
                </h2>

                <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                    {{ "Gracias por tu pedido en"|trans }} <a style="text-decoration: none; color:#4cb1ca" title="{{ 'Visita Clop' | trans }}" href="http://www.clop.com">clop.com</a>. {{ "Te enviaremos otro e-mail cuando el estado de tu pedido se actualice. También puedes visitar" |trans }}
                    <a style="text-decoration: none; color:#4cb1ca" title="{{ 'Mis pedidos' | trans }}" href="{{ path('user_orders') }}">{{ 'Mis pedidos' | trans }}</a> {{ 'en clop.com para consultar el estado de tus pedidos.' | trans }}
                </p>

                <h2 style="color:#555; font-weight: bold; margin: 0 0 10px 0; padding: 0; line-height: 26px; font-size: 14px; font-family: Helvetica, Arial, sans-serif; ">
                    {{ "Detalles de tu pedido"|trans }}
                </h2>

                <table border="0" width="680" style="margin-bottom: 20px">
                {% for orderItem in order.items %}
                {#<p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                    <img src="{{ asset(orderItem.item.imageMain.imageItemCart.getWebFilePath) }}">
                    {{ orderItem.item.name }}
                </p>#}
                    <tr>
                        <td style="width: 120px"><img src="{{ asset(orderItem.item.imageMain.imageItemCart.getWebFilePath) }}"></td>
                        <td>{{ orderItem.quantity }} x <a style="text-decoration: none;font-size: 14px; color:#4cb1ca" title="{{ 'Ver producto' | trans }}" href="{{ path('item_details', {'slug':orderItem.item.slug}) }}">{{ orderItem.item.name }}</a></td>
                    </tr>
                {% endfor %}
                </table>

                <h2 style="color:#555; font-weight: bold; margin: 0 0 10px 0; padding: 0; line-height: 26px; font-size: 14px; font-family: Helvetica, Arial, sans-serif; ">
                    {{ "Dirección de envío"|trans }}
                </h2>

                {% if order.address is not null %}
                    <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                        {{ order.address.address }}, {{ order.address.postalCode }}, {{ order.address.city }}, {{ order.address.city.province.name }}
                    </p>
                {% else %}
                    <p style="color:#767676; font-weight: normal; margin: 0 0 10px 0; padding: 0; line-height: 20px; font-size: 12px;font-family: Helvetica, Arial, sans-serif; ">
                        {{ 'Recogida en tienda' | trans }}
                    </p>
                {% endif %}
            </td>
        </tr>
    </table>
{% endblock %}